<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="10dp">
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/imageView"
               android:src="@mipmap/ic_launcher"
               android:layout_marginLeft="5sp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:text="Id"
              android:id="@+id/textView"
              android:layout_toRightOf="@+id/imageView"
              android:textSize="15dp"
              android:layout_marginLeft="30dp"
              android:textStyle="bold"
              tools:layout_editor_absoluteX="96dp"
              app:layout_constraintEnd_toStartOf="@+id/guideline"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:text="Name"
              android:id="@+id/textView1"
              android:layout_toRightOf="@+id/imageView"
              android:textSize="15dp"
              android:layout_marginLeft="30dp"
              android:textStyle="bold"
              app:layout_constraintEnd_toStartOf="@+id/guideline"
              app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Tagline"
              android:id="@+id/textView2"
              android:layout_toRightOf="@+id/imageView"
              android:textColor="@color/colorAccent"
              android:textStyle="bold"
              android:layout_marginLeft="30dp"
              app:layout_constraintEnd_toStartOf="@+id/guideline"
              app:layout_constraintTop_toBottomOf="@+id/textView1"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Firstbrewed"
              android:id="@+id/textView3"
              android:layout_toRightOf="@+id/imageView"
              android:textColor="@color/colorAccent"
              android:textStyle="bold"
              android:layout_marginLeft="30dp"
              app:layout_constraintEnd_toStartOf="@+id/guideline"
              app:layout_constraintTop_toBottomOf="@+id/textView2"/>



    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Abv"
              android:id="@+id/textView4"
              android:layout_toRightOf="@+id/imageView"
              android:textColor="@color/colorAccent"
              android:textStyle="bold"
              android:layout_marginLeft="30dp"
              app:layout_constraintEnd_toStartOf="@+id/guideline"
              app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Attenuation Level"
              android:id="@+id/textView5"
              android:layout_toRightOf="@+id/imageView"
              android:textColor="@color/colorAccent"
              android:textStyle="bold"
              android:layout_marginLeft="30dp"
              app:layout_constraintEnd_toStartOf="@+id/guideline"
              app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Description"
              android:id="@+id/textView6"
              android:layout_toRightOf="@+id/imageView"
              android:textColor="@color/colorAccent"
              android:textStyle="bold"
              android:layout_marginLeft="30dp"
              app:layout_constraintEnd_toStartOf="@+id/guideline"
              app:layout_constraintTop_toBottomOf="@+id/textView5"/>

        <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="162dp"
            android:id="@+id/guideline"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:text="1"
              android:id="@+id/IdTextView"
              android:layout_toRightOf="@+id/imageView"
              android:textSize="15dp"
              android:layout_marginLeft="10dp"
              tools:layout_editor_absoluteX="96dp"
              app:layout_constraintStart_toStartOf="@+id/guideline"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:text="Buzz"
              android:id="@+id/nameTextView"
              android:textSize="15dp"
              android:layout_marginLeft="10dp"
              tools:layout_editor_absoluteX="96dp"
              app:layout_constraintStart_toStartOf="@+id/guideline"
              app:layout_constraintTop_toTopOf="@+id/textView1" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:text="A Real Bitter Experience."
              android:id="@+id/taglineTextView"
              android:textSize="15dp"
              android:layout_marginLeft="10dp"
              tools:layout_editor_absoluteX="96dp"
              app:layout_constraintStart_toStartOf="@+id/guideline"
              app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:text="09/2007."
              android:id="@+id/firstBrewTextView"
              android:textSize="15dp"
              android:layout_marginLeft="10dp"
              tools:layout_editor_absoluteX="96dp"
              app:layout_constraintStart_toStartOf="@+id/guideline"
              app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.0"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:text="4.5"
              app:layout_constrainedWidth="false"
              android:id="@+id/abvTextView"
              android:textSize="15dp"
              android:layout_marginLeft="10dp"
              tools:layout_editor_absoluteX="96dp"
              app:layout_constraintStart_toStartOf="@+id/guideline"
              app:layout_constraintTop_toTopOf="@+id/textView5" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:text="75"
              app:layout_constrainedWidth="false"
              android:id="@+id/attenuationLevelTextView"
              android:textSize="15dp"
              android:layout_marginLeft="10dp"
              tools:layout_editor_absoluteX="96dp"
              app:layout_constraintStart_toStartOf="@+id/guideline"
              app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/colorAccent"
              android:text="A light, crisp and bitter IPA brewed with English and American hops. A small batch brewed only once."
              android:id="@+id/descriptionTextView"
              android:textSize="15dp"
              android:layout_marginLeft="10dp"
              tools:layout_editor_absoluteX="96dp"
              app:layout_constraintStart_toStartOf="@+id/guideline"
              app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.0"
              app:autoSizeMinTextSize="12sp"
              app:autoSizeMaxTextSize="100sp"
              app:autoSizeStepGranularity="2sp" />


</android.support.constraint.ConstraintLayout>